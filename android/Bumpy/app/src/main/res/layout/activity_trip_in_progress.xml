<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gauge="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyclingAdvocacyBlack"
    android:orientation="vertical"
    tools:context=".TripInProgressActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_weight="0.5"
        android:text="@string/speed"
        android:textColor="@color/cyclingAdvocacyYellow"
        android:textSize="@dimen/text_size_medium" />

    <com.ntt.customgaugeview.library.GaugeView
        android:id="@+id/gauge_view_speed"
        android:layout_width="match_parent"
        android:layout_height="@dimen/speed_gauge_height"
        android:layout_weight="2"
        android:layout_margin="@dimen/margin_small"
        android:layout_gravity="center"
        gauge:divisions="10"
        gauge:subdivisions="1"
        gauge:rangeValues="@array/speed_range_values"
        gauge:scaleEndValue="50"
        gauge:showInnerRim="false"
        gauge:showNeedle="true"
        gauge:showOuterBorder="false"
        gauge:showOuterRim="true"
        gauge:showOuterShadow="false"
        gauge:showRangeText="true"
        gauge:showRanges="true"
        gauge:showScale="true"
        gauge:textUnit="@string/speed_unit"
        gauge:textUnitSize="0.06"
        gauge:textValueSize="0.2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="@dimen/margin_small">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_standard"
            android:layout_marginRight="@dimen/margin_double">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/distance"
                android:textColor="@color/cyclingAdvocacyYellow"
                android:textSize="@dimen/text_size_medium"/>
            <TextView
                android:id="@+id/distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="25.12"
                android:textColor="@color/cyclingAdvocacyYellow"
                android:textSize="@dimen/text_size_small"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_double"
            android:layout_marginRight="@dimen/margin_standard">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/duration"
                android:textColor="@color/cyclingAdvocacyYellow"
                android:textSize="@dimen/text_size_medium"/>
            <TextView
                android:id="@+id/duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="00:25:21"
                android:textColor="@color/cyclingAdvocacyYellow"
                android:textSize="@dimen/text_size_small"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_large"
        android:text="@string/vibration"
        android:textColor="@color/cyclingAdvocacyYellow"
        android:textSize="@dimen/text_size_medium"/>

    <com.ntt.customgaugeview.library.GaugeView
        android:id="@+id/gauge_view_vibration"
        android:layout_width="@dimen/vibration_gauge_width"
        android:layout_height="@dimen/vibration_gauge_height"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_standard"
        gauge:divisions="10"
        gauge:subdivisions="1"
        gauge:rangeValues="@array/vibration_range_values"
        gauge:scaleEndValue="@dimen/vibration_end_value"
        gauge:showInnerRim="false"
        gauge:showNeedle="true"
        gauge:showOuterBorder="false"
        gauge:showOuterRim="true"
        gauge:showOuterShadow="false"
        gauge:showRangeText="true"
        gauge:showRanges="true"
        gauge:showScale="true"
        gauge:textUnit="@string/vibration_unit"
        gauge:textUnitSize="0.06"
        gauge:textValueSize="0.2"/>

    <Button
        android:id="@+id/button_trip_end"
        style="@style/StandardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_standard"
        android:text="@string/end_trip" />

</LinearLayout>