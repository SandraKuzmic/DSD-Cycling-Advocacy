<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyclingAdvocacyBlack"
    tools:context=".DashboardActivity">

    <TextView
        android:id="@+id/text_trip_stats"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heading_height"
        android:paddingLeft="@dimen/heading_padding_left"
        android:paddingTop="@dimen/heading_padding_top"
        android:background="@color/cyclingAdvocacyYellow"
        android:text="@string/trip_stats"
        android:textColor="@color/cyclingAdvocacyBlack"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_trip_end"
        android:layout_width="@dimen/button_size"
        android:layout_height="wrap_content"
        android:background="@color/cyclingAdvocacyYellow"
        android:text="@string/end_trip"
        android:textColor="@color/cyclingAdvocacyBlack"
        android:textSize="@dimen/text_size_medium"
        android:layout_marginTop="500dp"
        app:layout_constraintTop_toBottomOf="@id/text_trip_stats"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>