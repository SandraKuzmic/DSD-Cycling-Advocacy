<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/cyclingAdvocacyBlack"
    android:padding="@dimen/margin_view">

    <LinearLayout
        android:id="@+id/achievement1"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="8">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HIIIIIIIIIII"
            android:textColor="@color/cyclingAdvocacyYellow"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/details_achievement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Helloooooooooooooooooooooooooooooooooooooo"
            android:textColor="@color/cyclingAdvocacyYellow"
            android:textSize="@dimen/text_size_mini" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/image_trophy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_app_icon"/>
    </LinearLayout>



</LinearLayout>


