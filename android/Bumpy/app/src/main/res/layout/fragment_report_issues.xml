<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyclingAdvocacyBlack"
    android:gravity="center"
    android:orientation="vertical">

    <EditText
        android:id="@+id/input_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_standard"
        android:backgroundTint="@color/cyclingAdvocacyYellow"
        android:hint="@string/current_location"
        android:textColor="@color/cyclingAdvocacyYellow"
        android:textColorHint="@color/cyclingAdvocacyYellowHint"
        android:textSize="@dimen/text_size_small" />

    <!--todo spinner style-->
    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner_issue_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_standard"
        android:backgroundTint="@color/cyclingAdvocacyYellow"
        android:entries="@array/type_of_issue"
        android:prompt="@string/choose_issue"
        android:textSize="@dimen/text_size_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <!--todo button style-->
        <Button
            android:id="@+id/btn_take_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:background="@drawable/button_shape"
            android:text="@string/take_photo"
            android:textColor="@color/cyclingAdvocacyYellow"
            android:textSize="@dimen/text_size_mini" />

        <Button
            android:id="@+id/btn_choose_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:background="@drawable/button_shape"
            android:text="@string/choose_photo"
            android:textColor="@color/cyclingAdvocacyYellow"
            android:textSize="@dimen/text_size_mini" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        style="@style/StandardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_standard"
        android:text="@string/submit" />

</LinearLayout>