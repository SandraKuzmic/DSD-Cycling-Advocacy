<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyclingAdvocacyBlack">

    <TextView
        android:id="@+id/text_reportIssues"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heading_height"
        android:paddingLeft="@dimen/heading_padding_left"
        android:paddingTop="@dimen/heading_padding_top"
        android:background="@color/cyclingAdvocacyYellow"
        android:text="@string/title_reportIssue"
        android:textColor="@color/cyclingAdvocacyBlack"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_form"
        android:hint="Current Location"
        android:textColorHint="@color/cyclingAdvocacyYellowHint"
        android:backgroundTint="@color/cyclingAdvocacyYellow"
        android:textColor="@color/cyclingAdvocacyYellow"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintTop_toBottomOf="@id/text_reportIssues"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Spinner
        android:id="@+id/input_issue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_form"
        android:backgroundTint="@color/cyclingAdvocacyYellow"
        android:entries="@array/type_of_issue"
        android:prompt="@string/choose_issue"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintTop_toBottomOf="@id/input_location"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

   <LinearLayout
       android:id="@+id/add_photo"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/margin_form"
       app:layout_constraintTop_toBottomOf="@id/input_issue"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent">

    <Button
        android:id="@+id/button_take_photo"
        android:layout_width="@dimen/button_size"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_form"
        android:background="@drawable/button_shape"
        android:text="@string/take_photo"
        android:textColor="@color/cyclingAdvocacyYellow"
        android:textSize="@dimen/text_size_mini"
        app:layout_constraintLeft_toRightOf="@id/button_take_photo"/>

    <Button
        android:id="@+id/button_choose_photo"
        android:layout_width="@dimen/button_size"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_form"
        android:background="@drawable/button_shape"
        android:text="@string/choose_photo"
        android:textColor="@color/cyclingAdvocacyYellow"
        android:textSize="@dimen/text_size_mini"
        app:layout_constraintRight_toLeftOf="@id/button_take_photo"/>

   </LinearLayout>



        <Button
            android:id="@+id/button_submit"
            android:layout_width="@dimen/button_size"
            android:layout_height="wrap_content"
            android:background="@color/cyclingAdvocacyYellow"
            android:text="@string/submit"
            android:textColor="@color/cyclingAdvocacyBlack"
            android:textSize="@dimen/text_size_medium"
            android:layout_marginTop="500dp"
            app:layout_constraintTop_toBottomOf="@id/text_reportIssues"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>