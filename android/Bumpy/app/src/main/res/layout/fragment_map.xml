<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <ImageButton
        android:id="@+id/ic_center_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/cyclingAdvocacyBlack"
        android:tint="@color/cyclingAdvocacyYellow"
        app:srcCompat="@drawable/location"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/content_description_current_location"
        android:padding="@dimen/margin_extra_mini"
        android:layout_margin="@dimen/margin_standard"/>

    <Button
        android:id="@+id/btn_start_trip"
        style="@style/StandardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_extra_double"
        android:text="@string/start_trip" />

</RelativeLayout>