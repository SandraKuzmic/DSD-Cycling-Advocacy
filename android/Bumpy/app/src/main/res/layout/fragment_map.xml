<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_map"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heading_height"
        android:paddingLeft="@dimen/heading_padding_left"
        android:paddingTop="@dimen/heading_padding_top"
        android:background="@color/cyclingAdvocacyYellow"
        android:text="@string/app_name"
        android:textColor="@color/cyclingAdvocacyBlack"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/gps_button_view"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sub_heading_height"
        android:background="@color/cyclingAdvocacyBlack"
        app:layout_constraintTop_toBottomOf="@id/text_map">

        <View
            android:id="@+id/blank"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/text_gps"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/gps"
            android:textColor="@color/cyclingAdvocacyYellow"
            android:textSize="@dimen/text_size_small"
            android:layout_marginTop="@dimen/standard_dimension"/>

        <Switch
            android:id="@+id/gps_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/standard_dimension"
            android:scaleX="0.75"
            android:scaleY="0.75"
            android:theme="@style/SwitchCompatStyle"
            android:thumbTint="@color/cyclingAdvocacyYellow" />

    </LinearLayout>

    <Button
        android:id="@+id/button_start_trip"
        android:layout_width="@dimen/button_size"
        android:layout_height="wrap_content"
        android:background="@color/cyclingAdvocacyYellow"
        android:text="@string/ride"
        android:textColor="@color/cyclingAdvocacyBlack"
        android:textSize="@dimen/text_size_medium"
        android:layout_marginTop="500dp"
        app:layout_constraintTop_toBottomOf="@id/gps_button_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>