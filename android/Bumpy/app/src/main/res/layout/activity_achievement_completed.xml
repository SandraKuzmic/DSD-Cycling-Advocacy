<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyclingAdvocacyBlack"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".achievements.ui.AchievementCompletedActivity">

    <TextView
        android:id="@+id/tv_achievement_completed_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/cyclingAdvocacyYellow"
        tools:text="You just completed 2 achievements" />


</LinearLayout>