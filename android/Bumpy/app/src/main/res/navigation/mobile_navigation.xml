<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_map">

    <fragment
        android:id="@+id/navigation_reportIssue"
        android:name="com.cycling_advocacy.bumpy.ui.reportIssue.ReportIssueFragment"
        android:label="@string/title_reportIssue"
        tools:layout="@layout/fragment_report_issues" />

    <fragment
        android:id="@+id/navigation_pastTrips"
        android:name="com.cycling_advocacy.bumpy.ui.pastTrips.PastTripsFragment"
        android:label="@string/title_pastTrips"
        tools:layout="@layout/fragment_past_trips" />

    <fragment
        android:id="@+id/navigation_map"
        android:name="com.cycling_advocacy.bumpy.ui.map.MapFragment"
        android:label="@string/title_map"
        tools:layout="@layout/fragment_map" />

    <fragment
        android:id="@+id/navigation_achievements"
        android:name="com.cycling_advocacy.bumpy.ui.achievements.AchievementsFragment"
        android:label="@string/title_achievements"
        tools:layout="@layout/fragment_achievements" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.cycling_advocacy.bumpy.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />

</navigation>